<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="CustomBackIconDemo.Pages.ResultPage"  Title="Result">
	<ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Silver" Padding="0" Spacing="0">
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" BackgroundColor="Silver" Padding="10" >
                <Label Text="The Back Button was changed using a Custom Rendererer in the platform specific projects." TextColor="Black" HorizontalOptions="Start" VerticalOptions="StartAndExpand" />
                <Label Text="They are called 'NavigationPageRendererIOS.cs' or 'NavigationPageRendererIOS.cs'." TextColor="Black" HorizontalOptions="Start" VerticalOptions="StartAndExpand" />
            </StackLayout>
            <Button Text="Back" TextColor="White" BackgroundColor="Teal" Clicked="Handle_ClickedAsync" BorderWidth="0" />
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
